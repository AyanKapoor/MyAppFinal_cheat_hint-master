<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ayankapoor.myapplication.HelloAndroid"
    tools:showIn="@layout/activity_hello_android">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/button_yes"
        android:background="#3b8a2b"
        android:layout_above="@+id/button_login"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:id="@+id/button_no"
        android:background="#d11717"
        android:layout_alignTop="@+id/button_next"
        android:layout_alignRight="@+id/textView_score"
        android:layout_alignEnd="@+id/textView_score" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button_next"
        android:onClick="nxt"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score : "
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView_score"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="score"
        android:id="@+id/textView_score"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NUMBER"
        android:id="@+id/text_number"
        android:textSize="36dp"
        android:textColor="#1342b0"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_next"
        android:layout_alignEnd="@+id/button_next"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prime or not?"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView_highscore"
        android:layout_alignRight="@+id/button_next"
        android:layout_alignEnd="@+id/button_next"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW CHEAT"
        android:id="@+id/button_cheat"
        android:onClick="sendCheat"
        android:background="#11aee3"
        android:layout_alignTop="@+id/button_login"
        android:layout_alignLeft="@+id/button_no"
        android:layout_alignStart="@+id/button_no" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW HINT"
        android:id="@+id/button_send"
        android:onClick="sendMessage"
        android:background="#11aee3"
        android:layout_alignTop="@+id/button_login"
        android:layout_alignLeft="@+id/button_yes"
        android:layout_alignStart="@+id/button_yes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="High score:"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="High score"
        android:id="@+id/textView_highscore"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button_login"
        android:onClick="login"
        android:layout_below="@+id/button_next"
        android:layout_alignLeft="@+id/button_next"
        android:layout_alignStart="@+id/button_next"
        android:layout_marginTop="39dp" />

</RelativeLayout>
